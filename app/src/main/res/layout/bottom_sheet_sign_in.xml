<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/rounded_bottomsheet"
    android:padding="20dp">

    <!-- Tambahkan elemen UI yang Anda inginkan di sini -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"></LinearLayout>

    <TextView
        android:id="@+id/textViewMasuk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Masuk"
        android:layout_marginBottom="15dp"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/textEmailMasuk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:textColor="@color/grey"
        android:backgroundTint="@color/grey"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/textPasswordMasuk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/grey"
        android:backgroundTint="@color/grey"
        android:hint="Password"
        android:ems="10"
        android:inputType="textPassword" />


    <Button
        android:id="@+id/btnYukMasuk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/orange"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/white"
        android:text="yuk masuk" />

    <TextView
        android:id="@+id/tv_judul_resep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Belum punya akun?" />

    <TextView
        android:id="@+id/tv_buatDisini"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="buat disini"
        android:textColor="@color/grey" />

</LinearLayout>
